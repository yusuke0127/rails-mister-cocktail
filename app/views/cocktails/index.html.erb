<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand">Mister Cocktail</a>
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="" aria-label="Search">
    <%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-outline-dark my-2 my-sm-0" %>
  </form>
</nav>
<div class="banner" >
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
  </div>
</div>
<div class="container">
  <h1>Cocktail page</h1>
  <div class="d-flex justify-content-around bd-highlight p-3 m-3">
    <% @cocktails.each do |cocktail| %>
      <div class="card p-3" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
        </div>
        <ul class="list-group list-group-flush">
          <% cocktail.ingredients.each do |ingredient|%>
          <li class="list-group-item"><%= ingredient.name %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <footer>Footer</footer>
</div>
